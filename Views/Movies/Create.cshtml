@model MVCCourse2017.ViewModels.MovieVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create/Edit</h2>


@using (Html.BeginForm("Save", "Movies"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Movie</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Name)
            @Html.EditorFor(model => model.Movie.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Movie.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div>
                <label>Member Ship Type</label>
            </div>
            <div class="dropdown">
                @Html.LabelFor(model => model.Movie.GenreId)

                @Html.DropDownListFor(
               model => model.Movie.GenreId,
               new SelectList(Model.Genres, "Id", "Name", "-1"), "Please Select..", new { @class = "form-control" }
               )
                @Html.ValidationMessageFor(model => model.Movie.GenreId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Movie.DateAdded)
            @Html.TextBoxFor(model => model.Movie.DateAdded, "{0:dd/MM/yyyy}", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Movie.DateAdded, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.ReleaseDate)
            @Html.TextBoxFor(model => model.Movie.ReleaseDate, "{0:dd/MM/yyyy}", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Movie.ReleaseDate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.NumberInStock)
            @Html.TextBoxFor(model => model.Movie.NumberInStock, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Movie.NumberInStock, "", new { @class = "text-danger" })
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.ValidationSummary(true, "Please fill the required values", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            @Html.HiddenFor(model => model.Movie.Id)
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
